<link rel="stylesheet" href="form.css">
<form class="form" action="/<%= @my_music[:id]%>" method="post">
  <h1>New Song</h1>
  <div class="">
    <div><label for="title"><strong>Title:</strong></label></div>
    <div><input id="title" type="text" name="title" value="" placeholder="Enter new title for your song"></div>
  </div>
  <br>

  <div class="">
    <div><label for="body"><strong>Body:</strong></label></div>
    <div><textarea name="name" rows="8" cols="80" placeholder="Enter a new description"></textarea></div>
  </div>
  <br>

  <div class="">
    <div><label ><strong>Youtube Link:</strong></label></div>
    <div><input type="text" name="ytlink" value="<%= @my_music[:embed_id]%>"></div>
  </div>
  <br>

  <div class="">
    <div><label><strong>Lyrics:</strong></label></div>
    <div><input type="text" name="title" value="" placeholder="Enter new lyrics for your song"></div>
  </div>
  <br>

  <div class="">
    <% if ( @my_music [:id] !="")%>
    <input type="hidden" name="_method" value="PUT">
    <% end %>
    <input type="submit" value="Save post">
  </div>

</form>
